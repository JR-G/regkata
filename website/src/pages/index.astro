				npm: () => {
					window.open('https://www.npmjs.com/package/regkata', '_blank');
					return '<p>Opening npm package page...</p>';
				},

				clear: () => {
					const output = document.getElementById('output');
					if (output) output.innerHTML = '';
					return '';
				}
			};

			const scrollToBottom = (container: HTMLElement) => {
				setTimeout(() => container.scrollTop = container.scrollHeight, SCROLL_DELAY);
			};

			const createOutputBlock = (command: string, content: string) => {
				const block = document.createElement('div');
				block.className = 'output-block';

				const commandLine = document.createElement('div');
				commandLine.className = 'output-command';
				commandLine.textContent = `$ ${command}`;
				block.appendChild(commandLine);

				if (content) {
					const contentDiv = document.createElement('div');
					contentDiv.className = 'output-content';
					contentDiv.innerHTML = content;
					block.appendChild(contentDiv);
				}

				return block;
			};

			const executeCommand = (cmd: string) => {
				const trimmed = cmd.trim().toLowerCase();
				if (!trimmed) return;

				const output = document.getElementById('output');
				const terminalContent = document.querySelector('.terminal-content') as HTMLElement;

				if (trimmed === 'clear') {
					commands.clear();
					return;
				}

				const handler = commands[trimmed as keyof typeof commands];
				const result = handler?.() ?? `Command not found: ${cmd}. Type 'help' for available commands.`;

				if (output) {
					const block = createOutputBlock(cmd, result);
					if (!handler) {
						const contentDiv = block.querySelector('.output-content') as HTMLElement;
						contentDiv.style.color = 'var(--yellow)';
					}
					output.appendChild(block);
					if (terminalContent) scrollToBottom(terminalContent);
				}
			};

			const setupEventListeners = () => {
				const input = document.getElementById('terminal-input') as HTMLInputElement;
				const cmdButtons = document.querySelectorAll('.cmd-btn');

				if (input) {
					input.addEventListener('keydown', (e) => {
						if (e.key === 'Enter') {
							executeCommand(input.value);
							input.value = '';
						}
					});
					input.focus();
				}

				cmdButtons.forEach(btn => {
					btn.addEventListener('click', () => {
						const cmd = btn.getAttribute('data-command');
						if (cmd) executeCommand(cmd);
					});
				});

				document.addEventListener('click', () => input?.focus());
			};

			setupEventListeners();
		</script>
