				help: () => renderSection('Available Commands', renderList(HELP_ITEMS, 'feature-item')),

				lessons: () => `
					${renderSection('â¬œ White Belt - Fundamentals (15 lessons)', renderList(LESSONS.whiteBelt, 'lesson-item'))}
					${renderSection('ğŸŸ¨ Yellow Belt - Real World (7 lessons)', renderList(LESSONS.yellowBelt, 'lesson-item'))}
